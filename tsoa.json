{
  "entryFile": "index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "doc",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "apiKey",
        "name": "authorization",
        "in": "header",
        "description": "Token is not processed steal"
      }
    }
  },
  "routes": {
    "routesDir": "./src/router",
    "authenticationModule": "./src/secure"
  }
}
